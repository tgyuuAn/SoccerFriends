<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.tgyuu.presentation.feature.team.bottomsheet.MemberMoreBottomSheetViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/bottomSheetLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_20_white"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".feature.team.bottomsheet.MemberMoreBottomSheetFragment">

        <TextView
            android:id="@+id/changeNickNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottomSheetMarginTopSize"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/changeNickName"
            android:textColor="@color/gray3"
            android:onClick="@{()->viewModel.changeNickName()}"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/changePositionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottomSheetMarginTopSize"
            android:gravity="center"
            android:padding="10dp"
            android:onClick="@{()->viewModel.changePosition()}"
            android:text="@string/changePosition"
            android:textColor="@color/gray3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/changeBackNumberTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottomSheetMarginTopSize"
            android:gravity="center"
            android:padding="10dp"
            android:onClick="@{()->viewModel.changeBackNumber()}"
            android:text="@string/changeBackNumber"
            android:textColor="@color/gray3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/changeImageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.changeImage()}"
            android:layout_marginTop="@dimen/bottomSheetMarginTopSize"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/changeImage"
            android:textColor="@color/gray3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/removeImageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.removeImage()}"
            android:layout_marginTop="@dimen/bottomSheetMarginTopSize"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/removeImage"
            android:textColor="@color/gray3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/changeIsBenchWarmerTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.changeIsBenchWarmer()}"
            android:layout_marginTop="@dimen/bottomSheetMarginTopSize"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/changeIsBenchWarmer"
            android:textColor="@color/gray3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/removeMemberTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottomSheetMarginTopSize"
            android:gravity="center"
            android:onClick="@{()->viewModel.removeMember()}"
            android:padding="10dp"
            android:text="@string/removeMember"
            android:textColor="@color/gray3"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="@dimen/bottomSheetMarginTopSize"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rectangle_20_main"
            android:gravity="center"
            android:onClick="@{()->viewModel.complete()}"
            android:paddingVertical="10dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</layout>
